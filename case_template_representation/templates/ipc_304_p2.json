{
  "node_id": "ipc_304_p2",
  "label": "IPC 304 Part II",
  "sections": [
    "304"
  ],
  "type": "json_schema",
  "json_schema": {
    "name": "ipc_304_part_ii",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "death_caused": {
              "type": "string",
              "description": "Whether death was caused to the victim."
            },
            "knowledge_of_likely_death": {
              "type": "string",
              "description": "Whether the accused had knowledge that the act was likely to cause death but without intention to cause death."
            }
          },
          "required": [
            "death_caused",
            "knowledge_of_likely_death"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "victim_details": {
              "type": "string",
              "description": "Details about the victim including name and other identifying information."
            },
            "accused_details": {
              "type": "string",
              "description": "Details about the accused including name and other identifying information."
            },
            "act_causing_death": {
              "type": "string",
              "description": "Description of the act that caused death."
            }
          },
          "required": [
            "victim_details",
            "accused_details",
            "act_causing_death"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "circumstances_of_death": {
              "type": "string",
              "description": "The circumstances under which the death occurred."
            }
          },
          "required": [
            "circumstances_of_death"
          ],
          "additionalProperties": false
        },
        "tier_4_procedural": {
          "type": "object",
          "properties": {
            "case_number": {
              "type": "string",
              "description": "The case number (e.g., 'Crl. Appeal No.1192/2011')."
            },
            "case_title": {
              "type": "string",
              "description": "The full case title with parties (e.g., 'A.K. Goel vs. State of Delhi')."
            },
            "court_name": {
              "type": "string",
              "description": "The name of the court that delivered the judgment (e.g., 'High Court of Delhi')."
            },
            "judgment_date": {
              "type": "string",
              "description": "The date the judgment was delivered (e.g., '15th March, 2012')."
            },
            "appellant_or_petitioner": {
              "type": "string",
              "description": "The name(s) of the appellant or petitioner."
            },
            "respondent": {
              "type": "string",
              "description": "The name(s) of the respondent."
            },
            "judges_coram": {
              "type": "string",
              "description": "The name(s) of the judge(s) who delivered the judgment."
            },
            "counsel_for_appellant": {
              "type": "string",
              "description": "The counsel representing the appellant/petitioner."
            },
            "counsel_for_respondent": {
              "type": "string",
              "description": "The counsel representing the respondent."
            },
            "sections_invoked": {
              "type": "string",
              "description": "List of legal sections invoked in the case."
            },
            "case_type": {
              "type": "string",
              "description": "The type of case (e.g., 'Criminal Appeal', 'Writ Petition')."
            },
            "citation": {
              "type": "string",
              "description": "Legal citation for the case."
            },
            "acts_and_sections": {
              "type": "string",
              "description": "Acts and sections involved in the case."
            }
          },
          "required": [
            "case_number",
            "case_title",
            "court_name",
            "judgment_date",
            "appellant_or_petitioner",
            "respondent",
            "judges_coram",
            "counsel_for_appellant",
            "counsel_for_respondent",
            "sections_invoked",
            "case_type",
            "citation",
            "acts_and_sections"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "tier_4_procedural",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}