{
  "node_id": "maintenance_dispute",
  "label": "Maintenance Dispute",
  "sections": [
    "HMA 24",
    "HMA 18",
    "HMA 20"
  ],
  "type": "json_schema",
  "json_schema": {
    "name": "maintenance_dispute",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "applicant_financial_status": {
              "type": "string",
              "description": "Details about the applicant's occupation, income, and assets."
            },
            "respondent_financial_status": {
              "type": "string",
              "description": "Details about the respondent's occupation, income, and assets."
            },
            "quantum_of_maintenance_ordered": {
              "type": "string",
              "description": "The amount of maintenance granted or denied."
            }
          },
          "required": [
            "applicant_financial_status",
            "respondent_financial_status",
            "quantum_of_maintenance_ordered"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "grounds_for_seeking_maintenance": {
              "type": "string",
              "description": "The legal or factual basis for the maintenance claim (e.g., 'no source of income', 'illness')."
            }
          },
          "required": [
            "grounds_for_seeking_maintenance"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "incident_location": {
              "type": "string",
              "description": "Location where the incident occurred"
            },
            "incident_date_time": {
              "type": "string",
              "description": "Date and time of the incident"
            }
          },
          "required": [
            "incident_location",
            "incident_date_time"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}