{
  "node_id": "criminal_case",
  "label": "Criminal Case",
  "sections": [],
  "type": "json_schema",
  "json_schema": {
    "name": "criminal_case",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "ipc_sections_charged": {
              "type": "string",
              "description": "The specific Indian Penal Code sections and/or other Acts applied (e.g., 'IPC 302, 316')."
            },
            "nature_of_offense_category": {
              "type": "string",
              "description": "The broad category of the offense (e.g., 'Violent Offense', 'Property Offense')."
            }
          },
          "required": [
            "ipc_sections_charged",
            "nature_of_offense_category"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "accused_age": {
              "type": "string",
              "description": "The age of the accused at the time of the offense."
            },
            "victim_age": {
              "type": "string",
              "description": "The age of the victim at the time of the offense."
            },
            "motive_for_crime": {
              "type": "string",
              "description": "The driving factor for the crime (e.g., 'revenge', 'greed', 'matrimonial dispute')."
            }
          },
          "required": [
            "accused_age",
            "victim_age",
            "motive_for_crime"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "time_of_offense": {
              "type": "string",
              "description": "The approximate time of the crime (e.g., '10:00 PM', 'Midnight')."
            },
            "place_of_offense": {
              "type": "string",
              "description": "The location where the crime took place (e.g., 'dwelling house', 'public road')."
            }
          },
          "required": [
            "time_of_offense",
            "place_of_offense"
          ],
          "additionalProperties": false
        },
        "tier_4_procedural": {
          "type": "object",
          "properties": {
            "case_number": {
              "type": "string",
              "description": "The case number (e.g., 'Crl. Appeal No.1192/2011')."
            },
            "case_title": {
              "type": "string",
              "description": "The full case title with parties (e.g., 'A.K. Goel vs. State of Delhi')."
            },
            "court_name": {
              "type": "string",
              "description": "The name of the court that delivered the judgment (e.g., 'High Court of Delhi')."
            },
            "judgment_date": {
              "type": "string",
              "description": "The date the judgment was delivered (e.g., '15th March, 2012')."
            },
            "appellant_or_petitioner": {
              "type": "string",
              "description": "The name(s) of the appellant or petitioner."
            },
            "respondent": {
              "type": "string",
              "description": "The name(s) of the respondent."
            },
            "judges_coram": {
              "type": "string",
              "description": "The name(s) of the judge(s) who delivered the judgment."
            },
            "counsel_for_appellant": {
              "type": "string",
              "description": "The counsel representing the appellant/petitioner."
            },
            "counsel_for_respondent": {
              "type": "string",
              "description": "The counsel representing the respondent."
            },
            "sections_invoked": {
              "type": "string",
              "description": "List of legal sections invoked in the case."
            },
            "case_type": {
              "type": "string",
              "description": "The type of case (e.g., 'Criminal Appeal', 'Writ Petition')."
            },
            "citation": {
              "type": "string",
              "description": "Legal citation for the case."
            },
            "acts_and_sections": {
              "type": "string",
              "description": "Acts and sections involved in the case."
            }
          },
          "required": [
            "case_number",
            "case_title",
            "court_name",
            "judgment_date",
            "appellant_or_petitioner",
            "respondent",
            "judges_coram",
            "counsel_for_appellant",
            "counsel_for_respondent",
            "sections_invoked",
            "case_type",
            "citation",
            "acts_and_sections"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "tier_4_procedural",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}