{
  "node_id": "criminal_case",
  "label": "Criminal Case",
  "sections": [],
  "type": "json_schema",
  "json_schema": {
    "name": "criminal_case",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "ipc_sections_charged": {
              "type": "string",
              "description": "The specific Indian Penal Code sections and/or other Acts applied (e.g., 'IPC 302, 316')."
            },
            "nature_of_offense_category": {
              "type": "string",
              "description": "The broad category of the offense (e.g., 'Violent Offense', 'Property Offense')."
            },
             "key_facts": {
              "type": "string",
              "description": "Key determinative facts"
            }
          },
          "required": [
            "ipc_sections_charged",
            "nature_of_offense_category",
            "key_facts"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "accused_age": {
              "type": "string",
              "description": "The age of the accused at the time of the offense."
            },
            "victim_age": {
              "type": "string",
              "description": "The age of the victim at the time of the offense."
            },
            "motive_for_crime": {
              "type": "string",
              "description": "The driving factor for the crime (e.g., 'revenge', 'greed', 'matrimonial dispute')."
            }
          },
          "required": [
            "accused_age",
            "victim_age",
            "motive_for_crime"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "time_of_offense": {
              "type": "string",
              "description": "The approximate time of the crime (e.g., '10:00 PM', 'Midnight')."
            },
            "place_of_offense": {
              "type": "string",
              "description": "The location where the crime took place (e.g., 'dwelling house', 'public road')."
            }
          },
          "required": [
            "time_of_offense",
            "place_of_offense"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}