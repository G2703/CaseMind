{
  "node_id": "domestic_violence_act",
  "label": "Protection of Women from Domestic Violence Act (PWDVA)",
  "sections": [
    "PWDVA 12",
    "PWDVA 18",
    "PWDVA 20",
    "PWDVA 21",
    "PWDVA 22"
  ],
  "type": "json_schema",
  "json_schema": {
    "name": "protection_of_women_from_domestic_violence_act_pwdva",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "domestic_relationship": {
              "type": "string",
              "description": "Whether a domestic relationship exists or has existed between the aggrieved person and the respondent."
            },
            "respondent_identity": {
              "type": "string",
              "description": "The person against whom the relief is sought (adult male or family member)."
            },
            "domestic_violence_occurrence": {
              "type": "string",
              "description": "Whether the domestic violence (as defined in the Act) has occurred."
            }
          },
          "required": [
            "domestic_relationship",
            "respondent_identity",
            "domestic_violence_occurrence"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "nature_of_domestic_violence": {
              "type": "string",
              "description": "Specific type of violence (e.g., 'physical abuse', 'emotional abuse', 'economic abuse')."
            },
            "relief_sought": {
              "type": "string",
              "description": "The specific relief sought (e.g., 'protection order', 'residence order', 'monetary relief')."
            }
          },
          "required": [
            "nature_of_domestic_violence",
            "relief_sought"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "shared_household": {
              "type": "string",
              "description": "Whether the parties have lived together in a shared household."
            }
          },
          "required": [
            "shared_household"
          ],
          "additionalProperties": false
        },
        "tier_4_procedural": {
          "type": "object",
          "properties": {
            "case_number": {
              "type": "string",
              "description": "The case number (e.g., 'Crl. Appeal No.1192/2011')."
            },
            "case_title": {
              "type": "string",
              "description": "The full case title with parties (e.g., 'A.K. Goel vs. State of Delhi')."
            },
            "court_name": {
              "type": "string",
              "description": "The name of the court that delivered the judgment (e.g., 'High Court of Delhi')."
            },
            "judgment_date": {
              "type": "string",
              "description": "The date the judgment was delivered (e.g., '15th March, 2012')."
            },
            "appellant_or_petitioner": {
              "type": "string",
              "description": "The name(s) of the appellant or petitioner."
            },
            "respondent": {
              "type": "string",
              "description": "The name(s) of the respondent."
            },
            "judges_coram": {
              "type": "string",
              "description": "The name(s) of the judge(s) who delivered the judgment."
            },
            "counsel_for_appellant": {
              "type": "string",
              "description": "The counsel representing the appellant/petitioner."
            },
            "counsel_for_respondent": {
              "type": "string",
              "description": "The counsel representing the respondent."
            },
            "sections_invoked": {
              "type": "string",
              "description": "List of legal sections invoked in the case."
            },
            "case_type": {
              "type": "string",
              "description": "The type of case (e.g., 'Criminal Appeal', 'Writ Petition')."
            },
            "citation": {
              "type": "string",
              "description": "Legal citation for the case."
            },
            "acts_and_sections": {
              "type": "string",
              "description": "Acts and sections involved in the case."
            }
          },
          "required": [
            "case_number",
            "case_title",
            "court_name",
            "judgment_date",
            "appellant_or_petitioner",
            "respondent",
            "judges_coram",
            "counsel_for_appellant",
            "counsel_for_respondent",
            "sections_invoked",
            "case_type",
            "citation",
            "acts_and_sections"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "tier_4_procedural",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}