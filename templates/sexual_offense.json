{
  "node_id": "sexual_offense",
  "label": "Sexual Offense",
  "sections": [],
  "type": "json_schema",
  "json_schema": {
    "name": "sexual_offense",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "consent_status": {
              "type": "string",
              "description": "Whether the act was with or without consent."
            },
            "nature_of_sexual_act": {
              "type": "string",
              "description": "Specifics of the sexual act (e.g., 'penetrative', 'non-penetrative', 'oral')."
            }
          },
          "required": [
            "consent_status",
            "nature_of_sexual_act"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "age_of_victim": {
              "type": "string",
              "description": "The age of the victim at the time of the offense."
            },
            "relationship_with_accused": {
              "type": "string",
              "description": "The relationship between the victim and the accused (e.g., 'stranger', 'family member', 'acquaintance')."
            }
          },
          "required": [
            "age_of_victim",
            "relationship_with_accused"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "incident_location": {
              "type": "string",
              "description": "Location where the incident occurred"
            },
            "incident_date_time": {
              "type": "string",
              "description": "Date and time of the incident"
            }
          },
          "required": [
            "incident_location",
            "incident_date_time"
          ],
          "additionalProperties": false
        },
        "tier_4_procedural": {
          "type": "object",
          "properties": {
            "case_number": {
              "type": "string",
              "description": "The case number (e.g., 'Crl. Appeal No.1192/2011')."
            },
            "case_title": {
              "type": "string",
              "description": "The full case title with parties (e.g., 'A.K. Goel vs. State of Delhi')."
            },
            "court_name": {
              "type": "string",
              "description": "The name of the court that delivered the judgment (e.g., 'High Court of Delhi')."
            },
            "judgment_date": {
              "type": "string",
              "description": "The date the judgment was delivered (e.g., '15th March, 2012')."
            },
            "appellant_or_petitioner": {
              "type": "string",
              "description": "The name(s) of the appellant or petitioner."
            },
            "respondent": {
              "type": "string",
              "description": "The name(s) of the respondent."
            },
            "judges_coram": {
              "type": "string",
              "description": "The name(s) of the judge(s) who delivered the judgment."
            },
            "counsel_for_appellant": {
              "type": "string",
              "description": "The counsel representing the appellant/petitioner."
            },
            "counsel_for_respondent": {
              "type": "string",
              "description": "The counsel representing the respondent."
            },
            "sections_invoked": {
              "type": "string",
              "description": "List of legal sections invoked in the case."
            },
            "case_type": {
              "type": "string",
              "description": "The type of case (e.g., 'Criminal Appeal', 'Writ Petition')."
            },
            "citation": {
              "type": "string",
              "description": "Legal citation for the case."
            },
            "acts_and_sections": {
              "type": "string",
              "description": "Acts and sections involved in the case."
            }
          },
          "required": [
            "case_number",
            "case_title",
            "court_name",
            "judgment_date",
            "appellant_or_petitioner",
            "respondent",
            "judges_coram",
            "counsel_for_appellant",
            "counsel_for_respondent",
            "sections_invoked",
            "case_type",
            "citation",
            "acts_and_sections"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "tier_4_procedural",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}