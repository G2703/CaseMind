{
  "node_id": "violent_offense",
  "label": "Violent Offense",
  "sections": [],
  "type": "json_schema",
  "json_schema": {
    "name": "violent_offense",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "nature_of_injury": {
              "type": "string",
              "description": "Medical description of the harm caused (e.g., 'simple hurt', 'grievous hurt', 'burn injuries')."
            },
            "weapon_used": {
              "type": "string",
              "description": "The object or means used to cause harm (e.g., 'knife', 'lathi', 'kerosene')."
            }
          },
          "required": [
            "nature_of_injury",
            "weapon_used"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "number_of_accused": {
              "type": "string",
              "description": "The total count of individuals charged with the offense."
            },
            "victim_relationship_with_accused": {
              "type": "string",
              "description": "The nature of the relationship (e.g., 'stranger', 'spouse', 'neighbor')."
            }
          },
          "required": [
            "number_of_accused",
            "victim_relationship_with_accused"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "incident_location": {
              "type": "string",
              "description": "Location where the incident occurred"
            },
            "incident_date_time": {
              "type": "string",
              "description": "Date and time of the incident"
            }
          },
          "required": [
            "incident_location",
            "incident_date_time"
          ],
          "additionalProperties": false
        },
        "tier_4_procedural": {
          "type": "object",
          "properties": {
            "case_number": {
              "type": "string",
              "description": "The case number (e.g., 'Crl. Appeal No.1192/2011')."
            },
            "case_title": {
              "type": "string",
              "description": "The full case title with parties (e.g., 'A.K. Goel vs. State of Delhi')."
            },
            "court_name": {
              "type": "string",
              "description": "The name of the court that delivered the judgment (e.g., 'High Court of Delhi')."
            },
            "judgment_date": {
              "type": "string",
              "description": "The date the judgment was delivered (e.g., '15th March, 2012')."
            },
            "appellant_or_petitioner": {
              "type": "string",
              "description": "The name(s) of the appellant or petitioner."
            },
            "respondent": {
              "type": "string",
              "description": "The name(s) of the respondent."
            },
            "judges_coram": {
              "type": "string",
              "description": "The name(s) of the judge(s) who delivered the judgment."
            },
            "counsel_for_appellant": {
              "type": "string",
              "description": "The counsel representing the appellant/petitioner."
            },
            "counsel_for_respondent": {
              "type": "string",
              "description": "The counsel representing the respondent."
            },
            "sections_invoked": {
              "type": "string",
              "description": "List of legal sections invoked in the case."
            },
            "case_type": {
              "type": "string",
              "description": "The type of case (e.g., 'Criminal Appeal', 'Writ Petition')."
            },
            "citation": {
              "type": "string",
              "description": "Legal citation for the case."
            },
            "acts_and_sections": {
              "type": "string",
              "description": "Acts and sections involved in the case."
            }
          },
          "required": [
            "case_number",
            "case_title",
            "court_name",
            "judgment_date",
            "appellant_or_petitioner",
            "respondent",
            "judges_coram",
            "counsel_for_appellant",
            "counsel_for_respondent",
            "sections_invoked",
            "case_type",
            "citation",
            "acts_and_sections"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "tier_4_procedural",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}