{
  "node_id": "violent_offense",
  "label": "Violent Offense",
  "sections": [],
  "type": "json_schema",
  "json_schema": {
    "name": "violent_offense",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "nature_of_injury": {
              "type": "string",
              "description": "Medical description of the harm caused (e.g., 'simple hurt', 'grievous hurt', 'burn injuries')."
            },
            "weapon_used": {
              "type": "string",
              "description": "The object or means used to cause harm (e.g., 'knife', 'lathi', 'kerosene')."
            }
          },
          "required": [
            "nature_of_injury",
            "weapon_used"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "number_of_accused": {
              "type": "string",
              "description": "The total count of individuals charged with the offense."
            },
            "victim_relationship_with_accused": {
              "type": "string",
              "description": "The nature of the relationship (e.g., 'stranger', 'spouse', 'neighbor')."
            }
          },
          "required": [
            "number_of_accused",
            "victim_relationship_with_accused"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "incident_location": {
              "type": "string",
              "description": "Location where the incident occurred"
            },
            "incident_date_time": {
              "type": "string",
              "description": "Date and time of the incident"
            }
          },
          "required": [
            "incident_location",
            "incident_date_time"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}