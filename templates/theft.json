{
  "node_id": "theft",
  "label": "Theft",
  "sections": [],
  "type": "json_schema",
  "json_schema": {
    "name": "theft",
    "schema": {
      "type": "object",
      "properties": {
        "tier_1_determinative": {
          "type": "object",
          "properties": {
            "dishonest_intention": {
              "type": "string",
              "description": "Whether the taking was with dishonest intention."
            },
            "moving_movable_property": {
              "type": "string",
              "description": "Whether the property was moved."
            },
            "out_of_possession_of_person": {
              "type": "string",
              "description": "Whether the property was taken out of any person's possession."
            }
          },
          "required": [
            "dishonest_intention",
            "moving_movable_property",
            "out_of_possession_of_person"
          ],
          "additionalProperties": false
        },
        "tier_2_material": {
          "type": "object",
          "properties": {
            "property_description": {
              "type": "string",
              "description": "Detailed description of the stolen property."
            },
            "force_used_or_not": {
              "type": "string",
              "description": "Whether any force or threat was involved (distinguishes from robbery/extortion)."
            }
          },
          "required": [
            "property_description",
            "force_used_or_not"
          ],
          "additionalProperties": false
        },
        "tier_3_contextual": {
          "type": "object",
          "properties": {
            "incident_location": {
              "type": "string",
              "description": "Location where the incident occurred"
            },
            "incident_date_time": {
              "type": "string",
              "description": "Date and time of the incident"
            }
          },
          "required": [
            "incident_location",
            "incident_date_time"
          ],
          "additionalProperties": false
        },
        "residual_details": {
          "type": "object",
          "properties": {
            "additional_facts": {
              "type": "string",
              "description": "Any other relevant facts not captured above"
            }
          },
          "required": [
            "additional_facts"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "tier_1_determinative",
        "tier_2_material",
        "tier_3_contextual",
        "residual_details"
      ],
      "additionalProperties": false
    },
    "strict": true
  }
}